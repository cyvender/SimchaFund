@model HistoryViewModel

<div class="row">

    <div class="col-md-12">
        <h1>History for @Model.Contributor.FirstName @Model.Contributor.LastName</h1>
        <h2>Current Balance: @Model.Contributor.Balance.ToString("C")</h2>
        <table class="table table-hover table-bordered">
            <tr>
                <th>Action</th>
                <th>Date</th>
                <th>Amount</th>
            </tr>
            @foreach (var transaction in Model.Transactions)
            {
                <tr>
                    <td>@transaction.Action</td>
                    <td>@transaction.Date.ToLongDateString()</td>
                    <td>@transaction.Amount.ToString("C")</td>
                </tr>
            }
        </table>
        <a href="/home/contributors" class="btn btn-danger">Back to Contributors</a>
    </div>
</div>  